object Sheet7 {
  def isVomel(ch: Char): Boolean = {
  	"aeiou".contains(ch)
  }                                               //> isVomel: (ch: Char)Boolean
  
  def vomels(s: String, ignoreChars: Boolean = true): String = {
      for(c <- s if isVomel(c)) yield c
  }                                               //> vomels: (s: String, ignoreChars: Boolean)String
}