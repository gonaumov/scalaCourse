object Sheet4 {
  println("Welcome to the Scala worksheet")
  import java.io._
  trait Buffered extends InputStream {
  	val SIZE = 1024
  	private var end = 0
  	private val buffer = new Array[Byte](SIZE)
 		private var pos = 0
 		
 		override def read(): Int = {
 			if (pos == end) {
 				end = super.read(buffer, 0, SIZE)
 				pos = 0
 			}
 		}
  }
}