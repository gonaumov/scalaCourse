object Sheet3 {
  println("Welcome to the Scala worksheet")       //> Welcome to the Scala worksheet
  def decorate(str: String, left: String = "[", right: String = "]") =
  	left + str + right                        //> decorate: (str: String, left: String, right: String)String
  	
  decorate("Innovate don't stagnate!")            //> res0: String = [Innovate don't stagnate!]
  decorate("Innovate don't stagnate!", ">>>|")    //> res1: String = >>>|Innovate don't stagnate!]
  decorate("Innovate don't stagnate!", right = "|<<<")
                                                  //> res2: String = [Innovate don't stagnate!|<<<
}