object Sheet4 {
  println("Welcome to the Scala worksheet")       //> Welcome to the Scala worksheet
  
  def While(func: () => Unit, condition: () => Boolean): Unit = {
  		    var result = condition()
  		    if(result == false) {
  				func()
  				}
  		
  }                                               //> While: (func: () => Unit, condition: () => Boolean)Unit
}